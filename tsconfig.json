{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "typeRoots" : [
      "./src/types",
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/cypress/types/cypress-global-vars.d.ts"
  ],
  "exclude": [
    "dist",
    "src/stories"
  ]
}
